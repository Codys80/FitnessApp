                    BackgroundColor="#E5D8FB"
                    Margin="10"
                    >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label
                    Margin="5"
                     Grid.Row="0" Grid.ColumnSpan="3"
                    Text="Full body blast"
                    FontSize="24"
                    TextColor="Black"
                    FontAttributes="Bold"
                    HorizontalOptions="Start" />
                <Label
                    Margin="5"
                     Grid.Row="1" Grid.ColumnSpan="3"
                    Text="Full body"
                    FontSize="18"
                    TextColor="Black"
                    HorizontalOptions="Start" />
                <Label
                    Margin="5"
                     Grid.Row="2" Grid.ColumnSpan="3"
                    Text="🆕 You havent done this yet"
                    FontSize="18"
                    TextColor="Black"
                    HorizontalOptions="Start" />

                <HorizontalStackLayout  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" HorizontalOptions="StartAndExpand">
                    <Border
                      Stroke="Purple"
                      StrokeThickness="0"
                      BackgroundColor="Purple"
                      Margin="1">
                        <Label
                         Margin="5"

                         Text="5 excercises"
                         FontSize="9"
                         TextColor="White"
                         HorizontalOptions="Start" />
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="24"/>
                        </Border.StrokeShape>
                    </Border>
                    <Border
                      Stroke="Purple"
                      StrokeThickness="0"
                      BackgroundColor="LightGreen"
                      Margin="1">
                        <Label
                         Margin="5"

                         Text="60 minutes"
                         FontSize="9"
                         TextColor="White"
                         HorizontalOptions="Start" />
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="24"/>
                        </Border.StrokeShape>
                    </Border>
                </HorizontalStackLayout>
                <Label
                     Grid.Row="4" Grid.ColumnSpan="3"
                    Text="📆 Prefered day: Monday"
                    FontSize="18"
                    TextColor="Black"
                    HorizontalOptions="Start" />
                <Button 
                    x:Name="BtnFirst"
                    x:Uid="2"
                    Grid.Column="4" Grid.RowSpan="7"
                    Text=">"
                    ClassId="2"
                    FontSize="26"
                    BackgroundColor="#20000000"
                    TextColor="White"
                    HorizontalOptions="EndAndExpand" 
                    Clicked="PageUp"
        >
                </Button>
            </Grid>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>
        </Border>
        <!--end of button-->

